@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row py-4">
    <div class="col-md-5 text-center my-auto">
        <h1 class="mb-3">All Notes in <br />One Place.</h1>
        <p class="mb-5">Browse and create notes anywhere you want!</p>
        <a asp-page="/Account/Register" class="btn btn-primary py-2 px-5">SIGN IN</a>
    </div>
    <div class="col-md-7 mt-5">
        <div id="previewCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/pages.png" alt="Pages screenshot" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/update.png" alt="Update page screenshot" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#previewCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#previewCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon border-danger"></span>
            </a>
        </div>
    </div>
</div>

<div class="row py-4">
    <div class="card-deck">
        <div class="card">
            <img src="~/images/markdown.png" class="card-img-top w-50 mx-auto mt-3" />
            <div class="card-body">
                <h5 class="card-title">Markdown Support</h5>
                <p class="card-text">Your notes can be formatted by Markdown syntax! 
                <a href="https://www.markdownguide.org/"> Learn more</a></p>
            </div>
        </div>
        <div class="card">
            <img src="~/images/subpages.png" class="card-img-top w-50 mx-auto mt-3" />
            <div class="card-body">
                <h5 class="card-title">Subpages</h5>
                <p class="card-text">Every page can contain multiple subpages!</p>
            </div>
        </div>
        <div class="card">
            <img src="~/images/share.png" class="card-img-top w-50 mx-auto mt-3" />
            <div class="card-body">
                <h5 class="card-title">Share notes</h5>
                <p class="card-text">You can share your notes to anyone you want!</p>
            </div>
        </div>
    </div>
</div>