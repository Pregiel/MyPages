@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <span class="nav-link text-white">Hello @User.Identity.Name!</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-page="/Account/Logout">Log out</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link text-white" asp-page="/Account/Login">Log in</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-page="/Account/Register">Register</a>
        </li>
    </ul>
}
