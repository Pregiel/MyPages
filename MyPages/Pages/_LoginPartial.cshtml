@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="ml-auto">
        <ul class="navbar-nav">
            <li class="nav-item">
                <span class="nav-link text-dark">Hello @User.Identity.Name!</span>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-page="/Account/Logout">Log out</a>
            </li>
        </ul>
    </form>
}
else
{
<ul class="navbar-nav ml-auto">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Account/Login">Log in</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
    </li>
</ul>
}
