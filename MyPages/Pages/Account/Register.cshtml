@page
@model MyPages.Pages.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h1>Create new user</h1>

<hr />

@if (User.Identity.IsAuthenticated)
{
    <div>
        You are already logged in. <a asp-page="/Account/Logout">Log out</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserModel.Username" class="control-label"></label>
                    <input asp-for="UserModel.Username" class="form-control" />
                    <span asp-validation-for="UserModel.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserModel.Password" class="control-label"></label>
                    <input asp-for="UserModel.Password" class="form-control" />
                    <span asp-validation-for="UserModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserModel.ConfirmPassword" class="control-label"></label>
                    <input asp-for="UserModel.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="UserModel.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <small>Already have a account? <a asp-page="./Login" asp-route-ReturnUrl="@ViewData.Model.ReturnUrl">Login</a></small>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

}