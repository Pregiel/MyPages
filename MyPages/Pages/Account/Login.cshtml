@page
@model MyPages.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Log in</h1>

<hr />

@if (User.Identity.IsAuthenticated)
{
    <div>
        You are already logged in. <a asp-page="/Account/Logout">Log out</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserModel.Username" class="control-label"></label>
                    <input asp-for="UserModel.Username" class="form-control" />
                    <span asp-validation-for="UserModel.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserModel.Password" class="control-label"></label>
                    <input asp-for="UserModel.Password" class="form-control" />
                    <span asp-validation-for="UserModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Log in" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <small>Don't have an account? <a asp-page="./Register" asp-route-ReturnUrl="@ViewData.Model.ReturnUrl">Register</a></small>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
}